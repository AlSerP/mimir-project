<%= form_with url: project_tasks_path, model: task do |form| %>
  <div>
    <%= form.label :title %> 
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %> 
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :deadline %>
    <%= form.datetime_local_field :deadline %>
  </div>

  <%= form.submit %>
<% end %>
